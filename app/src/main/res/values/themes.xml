<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.5element2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.5element2.TextV</item>
    </style>


    <style name="Theme.5element2.TextV.Bold" parent="Theme.5element2.TextV">
        <item name="android:textStyle">italic</item>
        <item name="logo">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:textColor">@color/white</item>
    </style>>

    <style name="Theme.5element2.TextV" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/red_good</item>
        <item name="android:background">#009688</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>>

    <style name="Theme.5element2.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:gradientRadius">@integer/material_motion_duration_medium_1</item>
        <item name="android:textColor">@color/yellow</item>

    </style>>



</resources>